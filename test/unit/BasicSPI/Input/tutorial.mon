using com.apamax.rpi.spi.SPI;

monitor BasicSPI {
	/** @private */
	import "SPIPlugin" as SPIPlugin;
	
	action onload() {
		SPIPlugin.init(1, 500000);

		int i := 0;
		while(i < 10)
		{
			SPIPlugin.write(1);
			SPIPlugin.wait(2);
			SPIPlugin.write(0);
			SPIPlugin.wait(2);

			i := i + 1;
		}
	}
}
