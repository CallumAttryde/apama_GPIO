using com.apamax.rpi.spi.SPI;

event Step{
	integer i;
}

monitor BasicSPI {
	/** @private */
	SPI SPIPlugin;
	
	action onload() {
		log "OnLoad reached!";
		SPIPlugin := (new SPI);
		boolean result := SPIPlugin.init(0, 500000);

		if(not result) {
			log "Failed to setup";
			die;
		}
		else {
			log "Setup succeeded";
		}

		on Step(1) {
			integer i := 0;
			sequence<integer> dataSend := new sequence<integer>;
			dataSend.append(1);
			sequence<integer> dataReceive := new sequence<integer>;
			while(i < 10)
			{
				dataSend[0] := 1;
				dataReceive := SPIPlugin.readWrite(dataSend);
				log "Writing 1 to SPI";
				SPIPlugin.delay(200);
				dataSend[0] := 0;
				dataReceive := SPIPlugin.readWrite(dataSend);
				log "Writing 0 to SPI";
				SPIPlugin.delay(200);

				i := i + 1;
			}
			log "Step 1 complete";
		}
	}
}
